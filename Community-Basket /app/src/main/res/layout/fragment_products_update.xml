<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentProductsUpdate"
    android:orientation="vertical"
    android:padding="20sp">

    <EditText
        android:id="@+id/et_update_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17.5sp"
        android:height="40sp"
        android:layout_marginTop="25sp"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center_horizontal"
        android:hint="name"
        android:maxLength="16"
        android:maxLines="1"
        android:maxWidth="185sp"/>

    <EditText
        android:id="@+id/et_update_product_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17.5sp"
        android:height="40sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center_horizontal"
        android:hint="location"
        android:maxLength="15"
        android:maxLines="1"
        android:maxWidth="140sp"/>

    <EditText
        android:id="@+id/et_update_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17.5sp"
        android:height="40sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center_horizontal"
        android:hint="price" />

    <EditText
        android:id="@+id/et_update_product_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17.5sp"
        android:height="40sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center_horizontal"
        android:hint="unit (buc, kg, leg)" />

    <Spinner
        android:id="@+id/update_spinner_product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/update_product_button"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_gravity="center"
        android:text="Update"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>