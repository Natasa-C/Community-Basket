<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentProductsAdd"
    android:orientation="vertical"
    android:padding="20sp">

    <EditText
        android:id="@+id/et_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:height="60sp"
        android:layout_marginTop="25sp"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center_horizontal"
        android:hint="name"
        android:maxLength="16"
        android:maxLines="1"
        android:maxWidth="185sp"/>

    <EditText
        android:id="@+id/et_product_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:height="60sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center_horizontal"
        android:hint="location"

        android:maxLength="15"
        android:maxLines="1"
        android:maxWidth="140sp"/>

    <EditText
        android:id="@+id/et_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:height="60sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center_horizontal"
        android:hint="price" />

    <EditText
        android:id="@+id/et_product_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:height="60sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center_horizontal"
        android:hint="unit (buc, kg, leg)" />

    <EditText
        android:id="@+id/et_product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:height="60sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center_horizontal"
        android:hint="iv_unknown" />

    <Button
        android:id="@+id/add_product_button"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32sp"
        android:layout_gravity="center"
        android:text="ADD PRODUCT"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>